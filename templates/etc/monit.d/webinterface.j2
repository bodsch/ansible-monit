# {{ ansible_managed }}

{% if monit_webinterface is defined and monit_webinterface.enabled is defined and monit_webinterface.enabled %}
set httpd
  port {{ monit_webinterface.port }}
  use address {{ monit_webinterface.bind }}

{% if monit_webinterface.acl_rules is defined and monit_webinterface.acl_rules | count > 0 %}
{% for rule in monit_webinterface.acl_rules %}
    allow {{ rule }}
{% endfor %}
{% endif %}
{% if monit_webinterface.rw_group is defined and monit_webinterface.rw_group | length != 0 %}
    allow @{{ monit_webinterface.rw_group }}
{% endif %}
{% if monit_webinterface.r_group is defined and monit_webinterface.r_group | length != 0 %}
    allow @{{ monit_webinterface.r_group }} readonly
{% endif %}
{% endif %}
